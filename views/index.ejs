<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cocktail 🍸</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles/main.css">
</head>
<body>
    <div class="header">
        <center>
            <h1>🍸 Cocktail Chronicles 🍸</h1>
            <p>Sip 🍸, Shake 🍹🔄, Savor 😋🍴!</p>
        </center>
    </div>

    <div class="main">
        <label for="">Discover Our Variety of Cocktail Flavors</label>
        <button id="randomDrinkBtn">Click Me!</button>
    </div>

    <div id="drinkContainer">
        <h2 class="drinkname" id="drinkName"><%= name %></h2>
        <div class="image-container">
            <img id="drinkImage" style="width: 200px;" src="<%= image %>" alt="<%= name %>">
        </div>
    </div>
    

    <script>
        document.getElementById('randomDrinkBtn').addEventListener('click', function (event) {
            event.preventDefault(); // Prevent form submission

            // Fetch the random drink
            fetch('/random-drink')
                .then(response => response.json())
                .then(data => {
                    // Update the DOM with the new drink data
                    document.getElementById('drinkName').textContent = data.name;
                    document.getElementById('drinkImage').src = data.image;
                    document.getElementById('drinkImage').alt = data.name;
                })
                .catch(error => console.error('Error fetching random drink:', error));
        });
    </script>
</body>
</html>
